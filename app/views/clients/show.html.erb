<div class="row thm-buttons">
  <%= link_to 'Retour à la liste', clients_path(@client), :class => "btn-show-theme" %>
</div>

<div class="row thm-wrapper">
  <div class="col-4 thm-show-infos">
    <div id="thm-path">
      <h3><%= @path %></h3>
    </div>
    <div>
      <h1><%= @client.name + " " + @client.surname  %></h1>
      <div  id="thm-details">
        <%= @client.name + " " + @client.name1  + " " + @client.name2   + " " + @client.name3 + " " + @client.surname + " " + @client.surname1  + " " + @client.surname2   + " " + @client.surname3 %>
      </div>
      <div id="thm-details">
        <%= @dob %>
      </div>
    </div>
    <div id="thm-contact">
      <div>
        <%= @client.phone %>
      </div>
      <div>
        <%= mail_to @client.email%>
      </div>
    </div>

    <div id="edit-thm">
      <%= link_to 'Modifier',  edit_client_path(@client), :class => "btn-show-theme" %>

      <%= link_to 'Supprimer', client_path(@client),
      method: :delete,
      data: { confirm: "Sûre, sûre ?!" } %>
    </div>
  </div>


  </div>
</div>
