<div class="row thm-buttons">
  <%= link_to 'Retour à la liste', clients_path(@client), :class => "btn-show-theme" %>
</div>

<div class="row thm-wrapper">
  <div class="col-4 thm-show-infos">
    <div id="thm-path">
      <h3><%= @path %></h3>
    </div>
    <div>
      <h1><%= @client.name + " " + @client.surname  %></h1>
      <div  id="thm-details">
        <%= @client.name + " " + @client.name1  + " " + @client.name2   + " " + @client.name3 + " " + @client.surname + " " + @client.surname1  + " " + @client.surname2   + " " + @client.surname3 %>
      </div>
      <div id="thm-details">
        <%= @dob %>
      </div>
    </div>
    <div id="thm-contact">
      <div>
        <%= @client.phone %>
      </div>
      <div>
        <%= mail_to @client.email%>
      </div>
    </div>

    <div id="edit-thm">
      <%= link_to 'Modifier',  edit_client_path(@client), :class => "btn-show-theme" %>

      <%= link_to 'Supprimer', client_path(@client),
      method: :delete,
      data: { confirm: "Sûre, sûre ?!" } %>
    </div>
  </div>

  <div class="col theme-graphs">
    <div class="row">
      <div class="col" id="thm-graph">
        <h3>Spirale</h3>
        <div class="thm-show-spiral thm-graph">
        <div class="row">
          <div class="col">Physique</div>
          <div class="col"><%= @physics %></div>
        </div>
        <div class="row">
          <div class="col">Emotionel</div>
          <div class="col"><%= @emotional %></div>
        </div>
        <div class="row">
          <div class="col">Mental</div>
          <div class="col"><%= @mental %></div>
        </div>
        <div class="row">
          <div class="col">Créatif</div>
          <div class="col"><%= @creative %></div>
        </div>
        <div class="row">
          <div class="col">Mission</div>
          <div class="col"><%= @path %></div>
        </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col" id="thm-graph">
        <h3>Champs d'expérience</h3>
        <table class="thm-show-expfield">
          <tbody>
            <tr>
              <td>
                <div id="exp-key">1</div>
                <div id="exp-numb"><%= @counts[1] %></div>
              </td>
              <td>
                <div id="exp-key">2</div>
                <div id="exp-numb"><%= @counts[2] %></div>
              </td>
              <td>
                <div id="exp-key">3</div>
                <div id="exp-numb"><%= @counts[3] %></div>
              </td>
            </tr>
            <tr>
              <td>
                <div id="exp-key">4</div>
                <div id="exp-numb"><%= @counts[4] %></div>
              </td>
              <td>
                <div id="exp-key">5</div>
                <div id="exp-numb"><%= @counts[5] %></div>
              </td>
              <td>
                <div id="exp-key">6</div>
                <div id="exp-numb"><%= @counts[6] %></div>
              </td>
            </tr>
            <tr>
              <td>
                <div id="exp-key">7</div>
                <div id="exp-numb"><%= @counts[7] %></div>
              </td>
              <td>
                <div id="exp-key">8</div>
                <div id="exp-numb"><%= @counts[8] %></div>
              </td>
              <td>
                <div id="exp-key">9</div>
                <div id="exp-numb"><%= @counts[9] %></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col" id="thm-graph">
        <h3>Plan de vie</h3>
        <div class="thm-show-lifemap">
          <div class="row">
            <div class="col-md">
              <div><%= @path %></div>
            </div>
            <div class="col-md">
              <div><%= @emotional %></div>
              <div><%= @physics %></div>
              <div><%= @creative %></div>
            </div>
            <div class="col-md">
              <div><%= @action1 %></div>
              <div><%= @action2 %></div>
              <div><%= @action3 %></div>
              <div><%= @action4 %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
