<div>
  <div class="thm-index-nav">
    <h3>Energie du jour : 3</h3>
  </div>
  <div class="thm-index-content">
    <div class="col-sm-9 col-lg-6">
      <div class="thm-search-container">
        <div>
          <h1>Themes</h1>
          <p>Liste de l'ensemble des thèmes de tes clients</p>
        </div>
        <div class="thm-search">
          <form action="/action_page.php">
            <input type="text" placeholder="Search.." name="search">
            <button type="submit"><i class="fa fa-search"></i></button>
          </form>
        </div>
      </div>
      <div class="themes-cards">
        <% @themes.each do |theme| %>
        <div class="card-product">
          <div class="card-product-infos">
            <h3>
              <%= link_to (theme.name + ' ' + theme.surname), theme_path(theme) %>
            </h3>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col">
      <div>
        <%= link_to 'Créer un thème', new_theme_path(@theme), :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
