<div>
  <div class="thm-index-nav">
    <div id="thm-path">
      <h3>3</h3>
    </div>
  </div>
  <div class="thm-index-content">
    <div class="col-sm-10 col-lg-6">
      <div class="thm-search-container">
        <div>
          <h1>Themes</h1>
          <p>Liste de l'ensemble des thèmes de tes clients</p>
        </div>
      </div>
      <div class="themes-cards">
        <% @themes.each do |theme| %>
        <div class="card-product">
          <div class="card-product-infos">
            <p>
              <%= link_to (theme.name + ' ' + theme.surname), theme_path(theme) %>
            <p>
          </div>
            <%= link_to theme_path(theme), method: :delete, data: {confirm: 'Are you sure?'} do %>
          <div class="thm-index-actions">
              <i class="far fa-trash-alt"></i>
          </div>
            <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col">
      <div>
        <%= link_to 'Créer un thème', new_theme_path(@theme), :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
